{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@mikesposito/tunnelify-local-server": ["../tunnelify-local-server/src"],
      "@mikesposito/tunnelify-cli": ["../tunnelify-cli/src"],
    }
  },
  "references": [
    { "path": "../tunnelify-local-server" },
    { "path": "../tunnelify-cli" }
  ],
  "include": ["./src/**/*"]
}